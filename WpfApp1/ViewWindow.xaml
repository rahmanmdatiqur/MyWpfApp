<Window x:Class="WpfApp1.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ViewWindow" Height="450" Width="800">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="414" Margin="1,-4,0,0" VerticalAlignment="Top" Width="783" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
            <TextBlock x:Name="txtView" Canvas.Left="160" TextWrapping="Wrap" Canvas.Top="70" Height="282" Width="450" FontSize="18" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
            <Image x:Name="imageBox" Height="100" Canvas.Left="498" Canvas.Top="80" Width="100"/>
            <Button x:Name="btnBack" Content="Back" Canvas.Left="82" Canvas.Top="37" Width="75" Click="btnBack_Click"/>
            <Button x:Name="btnExit" Content="Exit" Canvas.Left="670" Canvas.Top="324" Width="75" Click="btnExit_Click"/>
        </Canvas>

    </Grid>
</Window>
